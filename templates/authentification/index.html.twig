{% extends 'base.html.twig' %}

{% block title %}{{parent()}}{% endblock %}
{% block stylesheets %}
    <link rel="stylesheet" href="login.css">
{% endblock %}
{% block body %}

<div class="form-wrapper">
    {{form_start(form)}}
        <div class="errors"></div>
        <div class="row">
            {{form_widget(form.email)}}
        </div>
        <div class="row">
            {{form_widget(form.password)}}
        </div>
    {{form_end(form)}}
    <a href="#">Mot de passe oubliéé ?</a>
    <h3>Vous n’êtes pas encore enregistré ? <a href="{{path('register')}}">Devenir partenaire</a></h3>
</div>

{% endblock %}
